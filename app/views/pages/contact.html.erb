<div class="container mt-5">
  <%= form_with url: contact_path, class: 'needs-validation', novalidate: true do |f| %>

    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Your Name", required: true %>
      <div class="invalid-feedback">
        Please provide a name.
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.text_field :email, class: "form-control", placeholder: "you@example.com", required: true %>
      <div class="invalid-feedback">
        Please provide a valid email.
      </div>
    </div>

    <div class="mb-3">
      <%= f.label :message, class: "form-label" %>
      <%= f.text_area :message, class: "form-control", rows: "5", placeholder: "Your Message", required: true %>
      <div class="invalid-feedback">
        Please provide a message.
      </div>
    </div>

    <%= f.submit "Send Message", class: "btn-flat" %>
  <% end %>
</div>
