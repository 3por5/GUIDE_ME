  <div class="row no-gutters">
  <div class="col-md-3 left-column">
  <h5 class="m-0"><strong>
  <%= link_to program.name, program_path(program) %>
</strong></h5> </div>
<div class="col-md-9"> <div class="card-body">
<p class="card-text">
