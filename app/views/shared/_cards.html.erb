<div class="container mt-5">
  <div class="row">
    <% @programs.each do |program| %>
      <div class="col-md-3 mb-4">
        <div class="card-program shadow-sm">
          <div class="card-header px-3">
            <h5 class="m-0 p-0"><strong><%= link_to program.name, program_path(program)  %></strong></h5>
          </div>
          <div class="card-body">
            <p class="card-text px-3 py-2"><%= program.description %></p>
          </div>
          <div class="card-user">
            <%= image_tag "avatar.svg" %>
            <div class="card-user-info">
              <p class="card-user-info-name"><%= link_to User.find(program.user_id).name, profile_path(User.find(program.user_id)) %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>